<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContentForGoodsOut.GoodsOutListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#081058">

            <TextView
                android:id="@+id/title_deal_will_goods_out"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="入库单" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#081058"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_height="30dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/tab_menu_goods_out_already_records"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:text="@string/tab_menu_goods_out_already_records"
                        android:gravity="center"
                        style="@style/radioTheme"
                        android:background="@drawable/border"
                        android:layout_height="30dp"/>

                    <RadioButton
                        android:id="@+id/tab_menu_goods_out_will_records"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:text="@string/tab_menu_goods_out_will_records"
                        android:gravity="center"
                        style="@style/radioTheme"
                        android:background="@drawable/border"
                        android:layout_height="30dp"/>

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/goodsOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>